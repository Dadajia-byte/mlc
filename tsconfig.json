{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Path mapping */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@mlc/utils": ["libs/utils/src"],
      "@mlc/schema": ["libs/schema/src"],
      "@mlc/materials": ["libs/materials/src"],
      "@mlc/renderer-core": ["libs/renderer-core/src"],
      "@mlc/renderer-react": ["libs/renderer-react/src"],
      "@mlc/renderer-vue": ["libs/renderer-vue/src"]
    }
  },
  "include": [],
  "exclude": ["node_modules", "dist", "build"]
}
